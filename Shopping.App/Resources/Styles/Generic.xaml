<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <x:String x:Key="IconicFont">MaterialDesignIconicFont</x:String>


    <Style x:Key="CurrencyLabel" TargetType="{x:Type Label}">
        <!--<Setter Property="FontAttributes" Value="Bold"/>-->
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Text" Value="{Binding .,StringFormat='£{0:0.00}'}"/>
    </Style>

    <Style x:Key="ListViewItemBorder" TargetType="{x:Type Border}">
        <Setter Property="Stroke" Value="{StaticResource SecondaryBrush}"/>
        <Setter Property="Margin" Value="5" />
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <Style x:Key="SplitLine" TargetType="{x:Type BoxView}">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray200}"/>
        <Setter Property="HeightRequest" Value="1" />
    </Style>
</ResourceDictionary>